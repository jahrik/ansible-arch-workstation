# Show docker environment variables without logging in
docker_inspect_env() {
  if [[ -z $1 ]]; then
      echo "Give <container-name OR id> like:  docker_inspect_env <container-name OR id>"
  else
  docker inspect --format='{{range .Config.Env}}{{println .}}{{end}}' $1
  fi
}
